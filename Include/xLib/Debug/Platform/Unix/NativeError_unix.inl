//-------------------------------------------------------------------------------------------------
/* static */
xINLINE bool_t
NativeError::_isSuccess_impl()
{
    bool_t bRv = (static_cast<ulong_t>( errno ) == _nativeCodeSuccess());

    return bRv;
}
//-------------------------------------------------------------------------------------------------
/* static */
xINLINE ulong_t
NativeError::_get_impl()
{
    culong_t code = static_cast<ulong_t>( errno );

    return code;
}
//-------------------------------------------------------------------------------------------------
/* static */
xINLINE void_t
NativeError::_set_impl(
    culong_t &a_code
)
{
    errno = static_cast<int_t>( a_code );
}
