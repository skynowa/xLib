//-------------------------------------------------------------------------------------------------
/* static */
inline bool_t
LastError::_isSuccess_impl()
{
    bool_t bRv = (static_cast<ulong_t>( errno ) == _nativeCodeSuccess());

    return bRv;
}
//-------------------------------------------------------------------------------------------------
/* static */
inline ulong_t
LastError::_get_impl()
{
    culong_t code = static_cast<ulong_t>( errno );

    return code;
}
//-------------------------------------------------------------------------------------------------
/* static */
inline void_t
LastError::_set_impl(
    culong_t &a_code
)
{
    errno = static_cast<int_t>( a_code );
}
//-------------------------------------------------------------------------------------------------


/**************************************************************************************************
*    private
*
**************************************************************************************************/

//-------------------------------------------------------------------------------------------------
/* static */
inline ulong_t
LastError::_nativeCodeSuccess_impl()
{
    return 0UL;
}
